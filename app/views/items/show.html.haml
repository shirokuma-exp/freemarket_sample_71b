.header
  = render "headder"
  
.body
  .itemInformation
    -# ログイン状態かつ自分の商品のみ編集削除できるようにする
    - if user_signed_in? && current_user.id == @item.user_id
      .editDestroyLink
        = link_to '削除', item_path(@item), method: :delete
        = link_to '編集', edit_item_path(@item.id)

    .item
      .item__name
        = @item.name
      .item__image
        - @item.photos.each do |n|
          = image_tag n.image.url
          -break if i=0
        .item__image__list
          %ul
            - @item.photos.each do |n|
              %li
                = image_tag n.image.url

      .item__price
        = "¥#{@item.price}"
      .item__taxEtc
        (税込)送料込み
      .item__buy
      .item__description
        = @item.description
      .item__table
        %table
          %tr
            %th 出品者
            %td 
              = @item.user.nickname
          %tr
            %th カテゴリー
            %td.right-lists 
              = link_to @item.category.root.name,"#" 
              %br
              = link_to @item.category.parent.name,"#" 
              %br
              = link_to @item.category.name,"#"
          %tr
            %th ブランド
            %td
              = @item.brand_name
          %tr
            %th 商品のサイズ
            %td
              = @item.size
          %tr
            %th 商品の状態
            %td 
              = @item.condition.name
          %tr
            %th 配送料の負担
            %td 
              = @item.delivery_charge.name
          %tr
            %th 発送元の地域
            %td 
              = @item.region.name
          %tr
            %th 発送の目安
            %td
              = @item.shipping_period.name
          
      .btns
        .like
          = link_to '#' do
            = fa_icon 'heart'
            お気に入り 0
        .report
          = link_to '#' do
            = fa_icon 'flag'
            不適切な商品の通報

      - if user_signed_in? && current_user.id == @item.user_id
        
      - else 
        - if @item.status == 1
          = link_to "購入画面に進む", purchase_item_path, class: "purchase-select" 
        - else
          .purchase__sold-out SOLD OUT

  .commentBox
    .commentForm
    .sendBtn

  .etc
    .swiches
      .previous
        = link_to '#' do
          < 前の商品
      .next
        = link_to '#' do
          次の商品 >  

    .watchMore
      = link_to '#' do
        メンズをもっと見る

.footer
  = render "footer"